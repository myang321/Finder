<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.steve.finder2.activities.MainActivity">

    <Button
        android:id="@+id/button_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="129dp"
        android:onClick="showLogoutDialog"
        android:text="Logout" />

    <Button
        android:id="@+id/button_lost_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="startLostMode"
        android:text="temp Start Lost Mode"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="85dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Lost Mode"
        android:id="@+id/button_stop"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/button_lost_mode"
        android:layout_alignStart="@+id/button_lost_mode"
        android:onClick="showStopLostModeDialog"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView1"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/button_stop"
        android:layout_alignStart="@+id/button_stop" />
</RelativeLayout>
